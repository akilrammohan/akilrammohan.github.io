---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

interface Props {
  title: string;
  fullWidth?: boolean;
}

const { title, fullWidth = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=BBH+Bogle&family=Exo+2:ital,wght@0,100..900;1,100..900&family=Istok+Web:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <Navigation />
      </aside>
      <main class={`content ${fullWidth ? 'content--full-width' : ''}`}>
        <slot />
      </main>
    </div>
    <script is:inline>
      const colors = [
        '--color-tet-1', '--color-tet-2', '--color-tet-3',
        '--color-tet-4', '--color-tet-5', '--color-tet-6'
      ];

      // Fisher-Yates shuffle to create random color order
      function shuffle(array) {
        const arr = [...array];
        for (let i = arr.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [arr[i], arr[j]] = [arr[j], arr[i]];
        }
        return arr;
      }

      const shuffledColors = shuffle(colors);

      // Select all links in DOM order and apply cycling colors
      document.querySelectorAll('a').forEach((link, i) => {
        link.style.color = `var(${shuffledColors[i % 6]})`;
      });
    </script>
  </body>
</html>

<style>
  .layout {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 25%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content {
    width: 75%;
    margin-left: 25%;
    padding: calc(50vh - 250px) 4rem 3rem;
    max-width: 800px;
  }

  .content--full-width {
    max-width: none;
  }

  /* Responsive: stack on mobile */
  @media (max-width: 768px) {
    .layout {
      flex-direction: column;
    }

    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
      padding: 1.5rem;
      justify-content: flex-start;
    }

    .content {
      width: 100%;
      margin-left: 0;
      padding: 1.5rem;
      padding-top: 1.5rem;
      max-width: none;
    }
  }
</style>
